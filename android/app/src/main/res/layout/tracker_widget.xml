<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tracker_widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1C1C2E">

    <!-- App logo + name row with nav buttons top-right -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <!-- Logo + label on the left -->
        <LinearLayout
            android:id="@+id/tracker_header_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Tracker"
                android:textSize="11sp"
                android:textColor="#99FFFFFF"
                android:letterSpacing="0.05" />

        </LinearLayout>

        <!-- Prev / Next nav buttons top-right -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageButton
                android:id="@+id/tracker_widget_prev"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_left"
                android:background="@drawable/circle_transparent"
                android:padding="2dp"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/tracker_widget_next"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_chevron_right"
                android:background="@drawable/circle_transparent"
                android:padding="2dp"
                android:scaleType="fitCenter" />

        </LinearLayout>

    </RelativeLayout>

    <!-- Tracker title -->
    <TextView
        android:id="@+id/tracker_widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No trackers yet"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Today status row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/tracker_widget_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="12sp"
            android:textColor="#BBFFFFFF" />

        <TextView
            android:id="@+id/tracker_widget_streak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="#FFD080" />

    </LinearLayout>

</LinearLayout>