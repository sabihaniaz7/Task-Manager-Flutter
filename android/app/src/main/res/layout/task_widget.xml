<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1C1C2E">

    <!-- App logo + name row with nav buttons top-right -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <!-- Logo + label on the left -->
        <LinearLayout
            android:id="@+id/widget_header_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Task Manager"
                android:textSize="11sp"
                android:textColor="#99FFFFFF"
                android:letterSpacing="0.05" />

        </LinearLayout>

        <!-- Prev / Next nav buttons top-right -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageButton
                android:id="@+id/widget_prev"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_left"
                android:background="@drawable/circle_transparent"
                android:padding="2dp"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/widget_next"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_chevron_right"
                android:background="@drawable/circle_transparent"
                android:padding="2dp"
                android:scaleType="fitCenter" />

        </LinearLayout>

    </RelativeLayout>

    <!-- Task title -->
    <TextView
        android:id="@+id/widget_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No tasks yet"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- Due date -->
    <TextView
        android:id="@+id/widget_task_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text=""
        android:textSize="12sp"
        android:textColor="#BBFFFFFF" />

</LinearLayout>